# Discord Bot Configuration
DISCORD_TOKEN=your_bot_token_here
DISCORD_CLIENT_ID=your_client_id_here
DISCORD_GUILD_ID=your_guild_id_here

# Database Configuration
DB_TYPE=sqlite
DB_PATH=./data/passquirk.db
DB_HOST=localhost
DB_PORT=3306
DB_NAME=passquirk_rpg
DB_USER=root
DB_PASSWORD=password

# Environment Settings
NODE_ENV=development
PORT=3000

# Logging Configuration
LOG_LEVEL=info
LOG_DIR=./logs

# Game Configuration
COMMAND_PREFIX=!
MAX_LEVEL=100
STARTING_GOLD=100
EXP_MULTIPLIER=1.0

# Security Settings
ADMIN_IDS=your_admin_id_here,another_admin_id
SECRET_KEY=your_secret_key_here

# Optional Features
WEBHOOK_URL=
ENABLE_RATE_LIMITING=true
ENABLE_AUTO_BACKUP=true
ENABLE_TOURNAMENT=true
ENABLE_GUILDS=true
ENABLE_DUNGEONS=true
ENABLE_PVP=true

# Web Interface (if applicable)
WEB_PORT=8080
WEB_HOST=localhost

# API Configuration
API_RATE_LIMIT=100
API_WINDOW_MS=900000

# Backup Configuration
BACKUP_INTERVAL=24
BACKUP_RETENTION=7